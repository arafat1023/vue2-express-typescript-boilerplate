{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": [
      "esnext",
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "ss",
    "**/node_modules/*"
  ]
}
